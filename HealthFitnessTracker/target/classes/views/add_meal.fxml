<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="popup-window"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.healthtracker.controller.AddMealController"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="300" style="-fx-padding: 20;">

    <Label text="Adaugă Masă" style="-fx-font-size: 18;" />
    <DatePicker fx:id="mealDatePicker" promptText="Data" />
    <TextField fx:id="descriptionField" promptText="Descriere" />
    <TextField fx:id="caloriesField" promptText="Calorii" />
    <Button fx:id="saveButton" text="Salvează" />
</VBox>
