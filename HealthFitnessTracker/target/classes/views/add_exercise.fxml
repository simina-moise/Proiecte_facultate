<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox styleClass="popup-window"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.healthtracker.controller.AddExerciseController"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="400" style="-fx-padding: 20;">

    <Label text="Adaugă Exercițiu" style="-fx-font-size: 18;" />
    <DatePicker fx:id="exerciseDatePicker" promptText="Data exercițiului" />
    <TextField fx:id="typeField" promptText="Tip exercițiu (ex: alergare, sală...)" />
    <TextField fx:id="durationField" promptText="Durată (minute)" />
    <TextField fx:id="caloriesField" promptText="Calorii arse" />
    <Button fx:id="saveButton" text="Salvează" />
</VBox>
